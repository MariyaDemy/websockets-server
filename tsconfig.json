{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": ["src/**/*"],
    "exclude": ["node-modules"],
  }